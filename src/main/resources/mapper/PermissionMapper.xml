<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.niit.cmsdemo.dao.PermissionDao">
    <resultMap id="BaseResultMap" type="com.niit.cmsdemo.domain.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="type" property="type"/>
        <result column="parent_id" property="parentId"/>
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="selectConditions" resultMap="BaseResultMap">
        SELECT * FROM permission WHERE 1 = 1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="url != null">
            and url = #{url}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
        <if test="parentId != null">
            and parent_id = #{parentId}
        </if>
        <if test="date != null">
            and DATE_FORMAT(create_time,'%Y-%m-%d') = #{date}
        </if>
    </select>
    <insert id="insertOne" parameterType="com.niit.cmsdemo.domain.Permission">
        INSERT INTO permission VALUES (#{id},#{name},#{url},#{type},#{parentId},now(),now())
    </insert>
    <delete id="deleteOne" parameterType="java.lang.Long">
        DELETE FROM c WHERE id = #{id}
    </delete>
    <update id="updateOne" parameterType="com.niit.cmsdemo.domain.Permission">
        UPDATE permission SET name = #{name},url = #{url},type = #{type},
        parent_id = #{parentId},create_time = now(),update_time = now()
        WHERE id = #{id}
    </update>
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM permission
    </select>

</mapper>