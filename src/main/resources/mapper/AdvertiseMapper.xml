<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.niit.cmsdemo.dao.AdvertiseDao">
    <resultMap id="BaseResultMap" type="com.niit.cmsdemo.domain.Advertise">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="url" property="url"/>
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="selectConditions" resultMap="BaseResultMap">
        SELECT * FROM advertise WHERE 1 = 1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="userId != null">
            and user_id  = #{userId}
        </if>
        <if test="url != null">
            and url  = #{url}
        </if>
        <if test="date != null">
            and DATE_FORMAT(create_time,'%Y-%m-%d') = #{date}
        </if>
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM advertise
    </select>

    <insert id="insertOne" parameterType="com.niit.cmsdemo.domain.Advertise">
        INSERT INTO advertise VALUES(#{id},#{userId},#{url},now(),now())
    </insert>

    <delete id="deleteOne" parameterType="java.lang.Long">
        DELETE FROM advertise WHERE id = #{id}
    </delete>


</mapper>