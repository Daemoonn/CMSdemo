<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.niit.cmsdemo.dao.UserRoleDao">
    <resultMap id="BaseResultMap" type="com.niit.cmsdemo.domain.UserRole">
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <insert id="insertOne" parameterType="com.niit.cmsdemo.domain.UserRole">
        insert into `user_role` values (#{userId},#{roleId});
    </insert>

    <delete id="deleteOne" >
        DELETE FROM `user_role` WHERE `user_id` = #{userId} and `role_id` = #{roleId}
    </delete>

    <update id="updateOne">
        UPDATE `user_role` SET `role_id`=#{roleId} WHERE `user_id`=#{userId}
    </update>

    <select id="selectAll" resultType="com.niit.cmsdemo.domain.UserRole">
        SELECT * FROM `user_role`
    </select>

    <select id="selectRoleIdsByUserId" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT `role_id` FROM `user_role` WHERE `user_id` = #{userId}
    </select>

    <select id="selectUserIdsByRoleId" parameterType="java.lang.Integer" resultType="java.lang.String">
        SELECT `user_id` FROM `user_role` WHERE `role_id` = #{roleId}
    </select>

</mapper>